<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.kotlin.practice.ui.fragment.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_appIntroFragment"
            app:destination="@id/appIntroFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
        <!--app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" bu kodu splash fragment geri dönmeyi engellemek için ekledik-->
        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/appIntroFragment"
        android:name="com.kotlin.practice.ui.fragment.onboarding.OnBoardingMainFragment"
        android:label="fragment_app_intro"
        tools:layout="@layout/fragment_onboarding_main" >
        <action
            android:id="@+id/action_appIntroFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.kotlin.practice.ui.fragment.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" />
</navigation>